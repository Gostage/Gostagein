<% if user_signed_in? %>
  <section>
    <div class="container-form-search">
      <%= render "internships/search_form" %>
    </div>
    <div class="container mb-5">
      <div class="row">
        <div class="col-lg-12">
          <h2 class="mb-3 mt-3"><span class="bg-secondary pr-2 pl-2">Les dernières expériences enregistrées</span></h2>
        </div>
      </div>
      <div class="row">
        <% @last_internships.each do |internship| %>
          <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card m-3">
              <div class="card-header">
                <%= internship.title %><span></span>
              </div>
              <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted"><%= internship.city %></h6>
                <p class="text-muted">Spécialité : <%= internship.specialty %></p>
                <p class="text-muted">Niveau : <%= internship.cursus %></p>
                <p class="text-muted">Population : <%= internship.population %></p>
                <ul class="list-inline list-inline-rating mr-2 mb-4">
                  <% internship.average_notation.times do %>
                  <li class="list-inline-item">
                    <i class="fa fa-star fa-lg" aria-hidden="true"></i>
                  </li>
                  <% end %>
                  <% (5 - internship.average_notation).times do %>
                  <li class="list-inline-item">
                    <i class="fa fa-star-o fa-lg" aria-hidden="true"></i>
                  </li>
                  <% end %>
                </ul>
                <%= link_to "Voir le stage", internship_path(internship.id), class: "btn btn-secondary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
      <div class="container text-center bg-info mb-5">
    <div class="row border">
      <div class="col-lg-12 mt-3">
        <h2 class="mb-5">Vous avez été ou êtes étudiants en psychologie ?</h2><hr>
        <h3 class="text-white mb-6">Partagez votre expérience de stage en l'ajoutant à la base de données </h3>
      </div>

      <div class="col-lg-12 mb-3">
        <%= link_to 'Créer une expérience de stage', new_internship_path, class: "btn btn-outline-dark" %>
      </div>
    </div>
  </div>
  </section>
<% else %>
  <div class="main-wrapper">
  <!-- ====================================
  ——— BANNER SECTION (TRAVEL)
  ===================================== -->
    <section class="banner-padding bg-primary">
      <div class="container">
        <div class="row text-center align-items-center justify-content-center">
          <div class="col-12">
            <!-- Banner Info -->
            <div class="banner-info">
              <img src="https://img.icons8.com/clouds/100/000000/contacts.png"/>
              <h2 class="text-uppercase text-white mb-4 banner-title">
                Trouver un stage en psychologie est parfois un véritable défi !
              </h2>
              <p class="lead text-dark lead-p">
                Et si on savait déjà où chercher grâce à un carnet d'adresses d'anciens stagiaires ?
              </p>
              <p class="lead text-secondary font-weight-bold lead-p pb-5">
                GoInStage vous propose ce carnet !
              </p>
              <div class="row align-items-center justify-content-center">
                <%= link_to "OMG je m'inscris tout de suite !", new_user_registration_path, class: "btn btn-secondary mr-3" %>
                <%= link_to "Je me connecte", new_user_session_path, class: "btn btn-dark ml-3" %>
              </div> 
            </div>
          </div>
        </div>
      </div>
    </section>

  <!-- ====================================
  ——— HOW IT WORK
  ===================================== -->
    <section class="pt-8 pb-6 pt-md-10 sec-pb-70">
      <div class="container">
        <div class="section-title section-title-modified">
          <h2>Comment ça fonctionne ?</h2>
          <p>Rechercher, créer &amp; consulter</p>
        </div>
        <div class="row">

          <div class="col-lg-4 col-sm-4 col-xs-12">
            <div class="card bg-light">
              <div class="mt-8 mb-3">
                <img src="https://img.icons8.com/clouds/200/000000/search.png" class="mx-auto d-block" alt="rechercher un stage"/>
              </div>
              <div class="card-body text-center">
                <h3 class="d-inline-block text-dark h4">Faire une recherche de stage</h3>
                <p>Lancer une recherche affinée par différents critères (spécialité, population, cursus, ville ou encore région)</p>
              </div>
            </div>
          </div>

          <div class="col-lg-4 col-sm-4 col-xs-12">
            <div class="card bg-light">
              <div class="mt-8 mb-3">
                <img src="https://img.icons8.com/clouds/200/000000/organization.png" class="mx-auto d-block" alt="expérience de stage"/>
              </div>
              <div class="card-body text-center ">
                <h3 class="d-inline-block text-dark h4">Créer une expérience de stage</h3>
                <p>Ajouter les expériences de stage auxquelles vous avez participé, cela aidera les étudiants à la recherche d'un stage. L'expérience existe déjà ? Pas de problème, il suffit de lui ajouter un avis avec votre note personnelle pour partager votre ressenti !</p>
              </div>
            </div>
          </div>

          <div class="col-lg-4 col-sm-4 col-xs-12">
            <div class="card bg-light">
              <div class="mt-8 mb-3">
                <img src="https://img.icons8.com/clouds/200/000000/resume.png" class="mx-auto d-block" alt="go-in-stage profil"/>
              </div>
              <div class="card-body text-center">
                <h3 class="d-inline-block text-dark h4">Accéder à votre dashboard</h3>
                <p>Retrouver sur votre profil : vos expériences, vos avis, vos commentaires et vos expériences gardées en favoris</p>
              </div>
            </div>
          </div>
        </div>
    </section>
  </div> <!-- element wrapper ends -->
<% end %>
 