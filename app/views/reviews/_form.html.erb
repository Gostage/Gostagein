<div class="text-center">
          <div>
          <p> * <i>Tous les champs sont obligatoires</i></p>
        </div>

  <%= form_tag internship_reviews_path(@internship), method:"post" do %>
    <div class="form-group">
      <p class="font-weight-bold text-uppercase">Titre de l'avis</p>
      <p class="form control"><%= text_field_tag :title %></p>
    </div>

    <div class="form-group" >
      <p class="font-weight-bold text-uppercase">Note</p>
      <input id="notation" max="5.0" min="1.0" name="notation" type="number"/>
    </div>

    <div class="form-group">
      <p class="font-weight-bold text-uppercase">Description</p>
      <textarea name="description" id="description" rows="12" placeholder="Ecris ici tes impressions et ressentis sur cette expÃ©rience de stage..."></textarea>
    </div>
    
    <%= hidden_field_tag(:review_user_id, current_user.id) %>
    <%= hidden_field_tag(:review_internship_id, @internship.id) %>

    <div class="form-group actions">
      <%= submit_tag "Envoyer l'avis", class:"btn btn-primary text-uppercase" %>
    </div>
  <% end %>
</div> 


