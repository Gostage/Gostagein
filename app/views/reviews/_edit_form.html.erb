<div class="container">
  <%= form_tag internship_reviews_path(@review), method:"post" do %>

    <div class="form-group">
      <p class="font-weight-bold">Titre de l'avis</p>
      <%= text_field_tag :title %>
    </div>

    <div class="form-group" >
      <p class="font-weight-bold">Note</p>
      <input id="notation" max="5.0" min="1.0" name="notation" step="0.5" type="number"/>
    </div>

    <div class="form-group">
      <p class="font-weight-bold">Description</p>
      <%= text_area_tag :description %>
    </div>
    
    <%= hidden_field_tag(:review_user_id, current_user.id) %>
    <%= hidden_field_tag(:review_internship_id, @review.review_internship_id) %>

    <div class="form-group actions">
      <%= submit_tag "Envoyer l'avis", class:"btn btn-primary text-uppercase" %>
    </div>
  <% end %>
</div> 