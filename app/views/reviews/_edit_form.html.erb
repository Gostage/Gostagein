<%= form_with(model: review, local: true) do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(internship.errors.count, "erreurs") %> ont empêché la sauvegarde de la modification:</h2>
      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<section>
  <div class="container container-form">
    <div class="card bg-secondary">
      <div class="card-body text-dark">
        <div class="card-header text-uppercase text-dark style-card "> Lieu de stage</div>
        <hr>
        <div class="row">
          <div class="form-group col-sm-6 col-xs-12">
            <%= form.label :title %>
            <%= form.text_field :title, class:"form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-sm-6 col-xs-12">
              <%= form.label :description %>
              <%= form.text_field :description, class:"form-control" %>
            </div>
            <div class="form-group col-sm-6 col-xs-12">
              <%= form.label :notation %>
              <%= select_tag("review[notation]", options_for_select([[@review.notation],
              [0, 0.5, 1, 1.5, 2, 2.5, 3, 3.5, 4, 4.5, 5]]), class: "form-control") %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

      <div class="row justify-content-center">
        <div class="col-sm-6 col-xs-12">
          <div class="mb-4">
            <button type="submit" class="btn btn-lg btn-primary btn-block">Envoyer</button>
          </div>
        </div>
      </div>
    <% end %>
</section>