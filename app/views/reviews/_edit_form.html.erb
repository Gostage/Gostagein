<%= form_with(model: review, local: true) do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(internship.errors.count, "erreurs") %> ont empêché la sauvegarde de la modification:</h2>
      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<section>
  <div class="container container-form">
    <div class="card bg-secondary">
      <div class="card-body text-dark">
        <div class="card-header text-uppercase text-dark style-card "> Lieu de stage</div>
        <hr>
        <div>
          <p> * <i>Tous les champs sont obligatoires</i></p>
        </div>
        <div class="row">
          <div class="form-group col-sm-6 col-xs-12">
            <%= form.label :title, class:"font-weight-bold" %>
            <%= form.text_field :title, class:"form-control bg-transparent border-form" %>
            </div>
            <div class="form-group col-sm-6 col-xs-12">
              <%= form.label :note, class:"font-weight-bold" %>
              <%= form.number_field :notation, min: 1, max: 5, class:"form-control bg-transparent border-form" %>
              </div>
          </div>
            <div class="form-group col-xs-12">
              <%= form.label :description, class:"font-weight-bold" %>
              <%= form.text_area :description, class:"form-control bg-transparent border-form" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

      <div class="row justify-content-center">
        <div class="col-sm-6 col-xs-12">
          <div class="mb-4">
            <button type="submit" class="btn btn-lg btn-primary btn-block">Envoyer</button>
          </div>
        </div>
      </div>
    <% end %>
</section>