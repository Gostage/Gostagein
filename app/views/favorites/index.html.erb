<p id="notice"><%= notice %></p>

<div class="container container-show">
  <h1 class="mb-5">Mes favoris</h1>
  <div class="text-dark">
    <% if @favorites == [] || @favorites == nil %>
      <p>Vous n'avez pas de stages en favoris.</p>
    <% else %>
      <div class="container">
        <div class="row">
          <% @favorites.each do |favorite| %>
            <div class="col-lg-4 col-md-6 col-sm-12">
              <div class="card m-3">
                <div class="card-header">
                  <div class="row">
                    <div class="col-10 text-dark">
                      <%= favorite.favorite_internship.title %>
                    </div>
                    <div class="col-2">
                      <%= link_to 'X', favorite, method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir retirer ce stage de vos favoris ?' }, class: "btn btn-danger btn-sm" %>
                    </div>
                  </div>
                </div>
                <div class="card-body">
                  <h6 class="card-subtitle mb-2 text-muted"><%= favorite.favorite_internship.city %></h6>
                  <p class="text-muted">Spécialité : <%= favorite.favorite_internship.specialty %></p>
                  <p class="text-muted">Niveau : <%= favorite.favorite_internship.cursus %></p>
                  <p class="text-muted">Population : <%= favorite.favorite_internship.population %></p>
                  <%= link_to "Voir le stage", internship_path(favorite.favorite_internship.id), class: "btn btn-secondary" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Retour", :back, class: "btn btn-outline-secondary mt-3" %>
</div>
