<section>
  <div class="container text-center col-lg-5 col-sm-8 container-form-user">
    <h2>Connexion</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-group mb-4 mt-4">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-envelope-open-text"></i></span>
        </div>
        <%= f.text_field :email, autofocus: true, placeholder:raw("Adresse email"), autocomplete: "Email", class: "form-control" %>
      </div>

      <div class="input-group mb-4 mt-4">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-lock-open"></i></span>
        </div>
        <%= f.password_field :password, autofocus: true, placeholder:raw("Mot de passe"), autocomplete: "Mot de passe", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-3">
          <div class="row">
            <div class="col-1">
              <%= f.check_box :remember_me %>
            </div>
            <div class="col text-align-left">
              <%= f.label :se_souvenir_de_moi %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Se connecter", class: "btn btn-primary mb-3" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
