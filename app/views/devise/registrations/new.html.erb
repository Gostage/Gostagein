<section>
  <div class="container text-center col-lg-5 col-sm-8 container-form-user">
    <h2>Inscription</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="input-group mb-4 mt-4">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-user"></i></span>
        </div>
        <%= f.text_field :first_name, autofocus: true, placeholder:raw("Prénom"), autocomplete: "Prénom", class: "form-control" %>
      </div>

      <div class="input-group mb-4 mt-4">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-user"></i></span>
        </div>
        <%= f.text_field :last_name, autofocus: true, placeholder:raw("Nom"), autocomplete: "Nom", class: "form-control" %>
      </div>

      <div class="input-group mb-4 mt-4">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-envelope-open-text"></i></span>
        </div>
        <%= f.text_field :email, autofocus: true, placeholder:raw("Adresse email"), autocomplete: "Email", class: "form-control" %>
      </div>

      <div class="input-group mb-4 mt-4">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-lock-open"></i></span>
        </div>
        <%= f.password_field :password, autofocus: true, placeholder:raw("Mot de passe"), autocomplete: "Mot de passe", class: "form-control" %>
      </div>
      <% if @minimum_password_length %>
        <em class="text-white">(<%= @minimum_password_length %> caractères minimum)</em>
      <% end %>

      <div class="input-group mb-4 mt-4">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-lock"></i></span>
        </div>
        <%= f.text_field :password_confirmation, autofocus: true, placeholder:raw("Confirmation du mot de passe"), autocomplete: "Confirmation du mot de passe", class: "form-control" %>
      </div>

      <div class="actions mb-3">
        <%= f.submit "S'inscrire", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</section>
