<section class="mt-5 mb-5">
  <div class="container text-center col-lg-5 col-sm-8">
    <h2>Réinitialiser le mot de passe</h2>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "Nouveau mot de passe", class:"font-weight-bold text-uppercase" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <div class="input-group mb-4 mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-envelope-open-text"></i></span>
          </div>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirmer le mot de passe", class:"font-weight-bold text-uppercase"  %><br />
        <div class="input-group mb-4 mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-envelope-open-text"></i></span>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Réinitialiser", class: "btn btn-primary mr-2 mb-3"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>