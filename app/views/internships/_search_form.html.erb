<div class="container">
  <div class="card search-internship-form">
    <div class="card-body">
      <h4 class="card-title text-muted">Lancez une recherche !</h4>
      <h6 class="card-subtitle mb-2 text-muted">Sélectionnez vos critères :</h6>
      <div class="card-text">
        <%= search_form_for @q do |f| %>
          <div class="row justify-content-left">
            <div class="col-lg-6 mx-3">
              <div class="row">
                <div class="input-group mb-3 mt-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text input-group-text-search-form">Spécialité</span>
                  </div>
                  <%= f.select :specialty_cont, options_for_select(["", "Hospitalier", "Maison médicale","Social", "Médico-social", "Petite enfance", "Associatif", "Scolaire", "Médico-pédagogique", "Libéral", "Recherche", "Entreprise","Privé", "Justice","Police Nationale", "Armée", "Carcéral", "Insertion professionnelle", "Recrutement", "Gestion de carrières", "Ressouces Humaines", "Marketing", "Santé au travail", "Autres"]), {}, { :class => "form-control"} %>
                </div>  
              </div>
              <div class="row">
                <div class="input-group mb-3 mt-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text input-group-text-search-form">Population</span>
                  </div>
                  <%= f.select :population_cont, options_for_select(["", "Personnes âgées", "Enfants", "Adolescents", "Adultes", "Autistes", "Haut Potentionel", "Personnes Cérébro-lésées", "Autres"]), {}, { :class => "form-control"} %>
                </div> 
              </div>
              <div class="row">
                <div class="input-group mb-3 mt-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text input-group-text-search-form">Ville</span>
                  </div>
                  <%= f.search_field :city_cont, class: "form-control" %>
                </div> 
              </div>
              <div class="row">
                <div class="input-group mb-3 mt-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text input-group-text-search-form">Niveau</span>
                  </div>
                  <%= f.select :cursus_cont, options_for_select(["", "Licence 1", "Licence 2", "Licence 3", "Master 1", "Master 2"]), {}, { :class => "form-control"} %>
                </div>  
              </div>
              <div class="row">
                <div class="input-group mb-3 mt-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text input-group-text-search-form">Note mini</span>
                  </div>
                  <%= f.select :notation_gteq, options_for_select([0, 0.5, 1, 1.5, 2, 2.5, 3, 3.5, 4, 4.5, 5]), {}, { :class => "form-control"} %>
                </div>  
              </div>
              <div class="row">
                <div class="actions">
                  <%= f.submit "Chercher", class: "btn btn-info px-5 mt-4" %>
                </div>
              </div>
            </div>   
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
